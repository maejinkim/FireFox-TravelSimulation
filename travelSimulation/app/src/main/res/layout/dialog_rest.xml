<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴식을 선택해주세요!"
        android:fontFamily="@font/font"
        android:layout_marginTop="100dp"
        android:textSize="30dp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/txtDay"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:background="@drawable/btn_cafe"
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/btnSchedule1"
            />

        <Button
            android:background="@drawable/btn_park"
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/btnSchedule2"
            />

        <Button
            android:background="@drawable/btn_room"
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/btnSchedule3"
            />



    </LinearLayout>


</LinearLayout>